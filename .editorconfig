root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 4
